{
  "name": "rocketcast",
  "description": "Rocketcast Desktop Client",
  "author": "Ben Nylund <ben@nylund.us>",
  "version": "0.1.1",
  "private": true,
  "main": "public/electron.js",
  "engines": {
    "node": ">=14.x"
  },
  "dependencies": {
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.8.7",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^0.27.2",
    "cross-env": "^7.0.3",
    "electron-builder-squirrel-windows": "^23.5.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.2.1",
    "moment": "^2.29.4",
    "node-notifier": "^10.0.1",
    "pidusage": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-modal": "^3.15.1",
    "react-scripts": "5.0.1",
    "sass": "^1.53.0",
    "socket.io-client": "^4.5.1",
    "uuid": "^9.0.0",
    "web-vitals": "^2.1.4",
    "ws": "^8.8.1"
  },
  "scripts": {
    "start": "cross-env PUBLIC_URL=./ react-scripts start",
    "build": "cross-env PUBLIC_URL=./ react-scripts build",
    "test": "cross-env PUBLIC_URL=./ react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"cross-env NODE_ENV=development npm run electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "pack": "yarn build && electron-builder --dir",
    "dist": "yarn build && electron-builder --publish always",
    "dist:publish": "yarn build && electron-builder --publish always",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .js"
  },
  "build": {
    "appId": "io.rocketcast.Rocketcast",
    "productName": "Rocketcast",
    "win": {
      "publish": [
        "github"
      ],
      "target": "nsis"
    },
    "extraResources": [
      "assets/**"
    ],
    "asarUnpack": [
      "assets/**"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "Rocketcast-Client-${version}.${ext}"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "electron": "^19.0.7",
    "electron-builder": "^23.1.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "prettier": "^2.7.1",
    "wait-on": "^6.0.1"
  }
}
